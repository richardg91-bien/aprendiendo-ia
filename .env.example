FLASK_ENV=development
DEBUG=True
HOST=127.0.0.1
PORT=8000
SECRET_KEY=aria-dev-secret-key-2024

# ===========================================
# INTELIGENCIA ARTIFICIAL
# ===========================================
# Obt√©n tu API key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-tu_api_key_aqui

# ===========================================
# GOOGLE CLOUD CONFIGURATION (OPCIONAL)
# ===========================================
# Google Cloud API Key - Obtener en: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=tu_clave_api_google_cloud

