# Configuración de Variables de Entorno para ARIA
# Copia este archivo como .env y configura tus valores

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
FLASK_ENV=development
DEBUG=True
HOST=127.0.0.1
PORT=8000
SECRET_KEY=aria-dev-secret-key-2024

# ===========================================
# INTELIGENCIA ARTIFICIAL
# ===========================================
# Obtén tu API key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-tu_api_key_aqui

# ===========================================
# BASE DE DATOS (Opcional - para deployment)
# ===========================================
# Configuración de Supabase para deployment
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu_supabase_anon_key_aqui

# ===========================================
# PROTECCIÓN INFANTIL
# ===========================================
CHILD_PROTECTION=True
PARENTAL_LOGS=True
CONTENT_FILTERING=strict

# ===========================================
# LOGS Y MONITOREO
# ===========================================
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=True

# ===========================================
# CONFIGURACIÓN DE DEPLOYMENT
# ===========================================
# Para producción, cambiar a production
ENVIRONMENT=development

# ===========================================
# CORS (para desarrollo frontend separado)
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000