# ===========================================
# üé® CONFIGURACI√ìN EMOCIONAL
# ===========================================
# Colores para estados emocionales
COLOR_NEUTRAL=#0080FF
COLOR_LEARNING=#00FF00
COLOR_FRUSTRATED=#FF0000
COLOR_HAPPY=#FFD700
COLOR_THINKING=#8A2BE2

# Intensidad emocional (0.0 - 1.0)
EMOTION_INTENSITY=0.7
LEARNING_ENTHUSIASM=0.9

# ===========================================
# PROTECCI√ìN INFANTIL
# ===========================================
CHILD_PROTECTION=True
PARENTAL_LOGS=True
CONTENT_FILTERING=strict

# ===========================================
# LOGS Y MONITOREO
# ===========================================
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=True

# ===========================================
# CONFIGURACI√ìN DE DEPLOYMENT
# ===========================================
# Para producci√≥n, cambiar a production
ENVIRONMENT=development

# ===========================================
# CORS (para desarrollo frontend separado)
