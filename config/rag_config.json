{
  "rag_settings": {
    "max_context_length": 4000,
    "min_confidence_threshold": 0.3,
    "max_sources": 5,
    "cache_duration_hours": 24,
    "enable_emotion_analysis": true,
    "enable_web_search_fallback": true,
    "supabase_confidence_threshold": 0.2,
    "local_db_confidence_threshold": 0.3,
    "fallback_confidence_threshold": 0.5
  },
  "source_priorities": {
    "supabase_knowledge": 1,
    "local_knowledge_db": 2,
    "conversation_memory": 3,
    "document_sources": 4,
    "api_sources": 5,
    "web_sources": 6,
    "local_knowledge_fallback": 7
  },
  "response_templates": {
    "multi_source": "Basándome en múltiples fuentes, puedo explicarte sobre {topic}:",
    "single_source": "Según la información que tengo sobre {topic}:",
    "low_confidence": "No tengo información completa sobre {topic}, pero puedo sugerir:",
    "web_fallback": "Buscaré información actualizada sobre {topic} en la web:"
  },
  "emotion_mappings": {
    "happy": {
      "confidence_boost": 0.1,
      "response_style": "enthusiastic"
    },
    "sad": {
      "confidence_boost": -0.1,
      "response_style": "empathetic"
    },
    "curious": {
      "confidence_boost": 0.05,
      "response_style": "educational"
    },
    "confused": {
      "confidence_boost": -0.05,
      "response_style": "clarifying"
    }
  },
  "supabase_search": {
    "use_fuzzy_matching": true,
    "search_in_description": true,
    "search_in_category": true,
    "max_results": 10,
    "boost_exact_matches": 0.3
  }
}